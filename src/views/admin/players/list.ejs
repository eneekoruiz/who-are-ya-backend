<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Buscar Jokalariak</title>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px;  text-align: center; margin: 20px;  }
    label { margin-right: 10px; }
    input, select { margin-right: 20px; padding: 5px; }
    button { padding: 5px 10px; margin-right: 5px; }
    table { border-collapse: collapse; width: 100%; margin-top: 20px; }
    th, td { border: 1px solid #ccc; padding: 8px; text-align: left; }
    th { background-color: #f4f4f4; }
    .message { margin-top: 15px; color: red; }
  </style>
</head>
<body>
  <h1>Jokalariak bilatu</h1>

  <div>
  <a href="/admin/"><button type="button">Itzuli panelera</button></a>
  </div>

  <form id="search-form">
    <label for="name">Izena:</label>
    <input type="text" id="name" name="name" placeholder="Izena" />

    <label for="team">Taldea:</label>
    <input type="text" id="team" name="team" placeholder="Taldea" />

    <label for="nationality">Herrialdea:</label>
    <input type="text" id="nationality" name="nationality" placeholder="Herrialdea" />

    <label for="position">Posizioa:</label>
    <select id="position" name="position">
      <option value="">-- Aukeratu --</option>
      <option value="GK">Atezaina</option>
      <option value="DF">Defentsa</option>
      <option value="MF">Erdilaria</option>
      <option value="FW">Aurrekaria</option>
    </select>

    <label for="number">Zenbakia:</label>
    <input type="number" id="number" name="number" min="1" max="99" />

    <button type="submit">Bilatu</button>
  </form>

  <div id="message" class="message"></div>

  <table id="players-table" style="display:none;">
    <thead>
      <tr>
        <th>ID</th>
        <th>Izena</th>
        <th>Taldea</th>
        <th>Herrialdea</th>
        <th>Liga</th>
        <th>Posizioa</th>
        <th>Zenbakia</th>
        <th>Ekintzak</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <script>
    const form = document.getElementById('search-form');
    const table = document.getElementById('players-table');
    const tbody = table.querySelector('tbody');
    const message = document.getElementById('message');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      message.textContent = '';
      tbody.innerHTML = '';
      table.style.display = 'none';

      const formData = new FormData(form);
      const params = new URLSearchParams();

      for (const [key, value] of formData.entries()) {
        if (value.trim() !== '') {
          params.append(key, value.trim());
        }
      }

      try {
        const response = await axios.get('/api/players?' + params.toString());
        const players = response.data;

        if (players.length === 0) {
          message.textContent = 'Ez da jokalaririk aurkitu.';
          return;
        }

        players.forEach(player => {
          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td>${player.id}</td>
            <td>${player.name}</td>
            <td>${player.teamId?.name || 'Talderik ez'}</td>
            <td>${player.nationality || ''}</td>
            <td>${player.leagueId?.name || 'Ligarik ez'}</td>
            <td>${player.position || ''}</td>
            <td>${player.number || ''}</td>
            <td>
              <a href="/admin/players/edit/${player._id}">
                <button type="button">Editatu</button>
              </a>
              <button type="button" onclick="deletePlayer('${player._id}')">Ezabatu</button>
            </td>
          `;
          tbody.appendChild(tr);
        });

        table.style.display = 'table';

      } catch (err) {
        message.textContent = 'Errorea bilatzean.';
        console.error(err);
      }
    });

    async function deletePlayer(id) {
      if (!confirm('Ziur zaude jokalaria ezabatu nahi duzula?')) return;

      try {
        await axios.delete(`/api/players/${id}`);
        message.textContent = 'Jokalaria ezabatuta.';
        form.dispatchEvent(new Event('submit'));
      } catch (err) {
        message.textContent = 'Errorea ezabatzean.';
        console.error(err);
      }
    }
  </script>
</body>
</html>
